{
  "name": "likavynent/parraindex",
  "description": "School project for the third semester of french Computer Science Bachelor",
  "type": "project",
  "license": "MIT",
  "version": "1.0.0",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Luka MARET",
      "email": "maret.luka@gmail.com"
    },
    {
      "name": "Lilian BAUDRY",
      "email": "lilian.baudry21@gmail.com"
    },
    {
      "name": "Melvyn DELPREE",
      "email": "melvyn2701@gmail.com"
    },
    {
      "name": "Vincent CHAVOT-DAMBRUN",
      "email": "vincent.chavotdambrun@gmail.com"
    }
  ],
  "require": {
    "php-di/php-di": "^6.4",
    "altorouter/altorouter": "^2.0",
    "filp/whoops": "^2.14",
    "symfony/var-dumper": "^6.0",
    "twig/twig": "^3.4",
    "ext-pdo": "^8.0",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.2",
    "ext-zip": "*",
    "phpmailer/phpmailer": "^6.7",
    "ext-fileinfo": "*"
  },
  "scripts": {
    "tests": [
      "Composer\\Config::disableProcessTimeout",
      "@putenv XDEBUG_MODE=coverage",
      "phpunit"
    ],
    "server": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8000 -t public"
    ],
    "sass": [
      "Composer\\Config::disableProcessTimeout",
      "sass --watch scss:public/css"
    ],
    "documentation": [
      "Composer\\Config::disableProcessTimeout",
      "phpDocumentor -d src/ -t out/documentation/ --title Parraindoc"
    ],
    "mutating": [
      "Composer\\Config::disableProcessTimeout",
      "phpunit",
      "infection --threads=4"
    ],
    "sniffer": [
      "Composer\\Config::disableProcessTimeout",
      "phpcs --standard=phpcs.xml"
    ],
    "sniffer-fix": [
      "Composer\\Config::disableProcessTimeout",
      "phpcbf --standard=phpcs.xml"
    ]
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^9.5",
    "infection/infection": "^0.26.16"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
